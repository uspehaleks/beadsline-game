{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "pages/**/*",
    "components/**/*",
    "contexts/**/*",
    "hooks/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "server/vite.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/contexts/*": [
        "./contexts/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/pages/*": [
        "./pages/*"
      ]
    },
    "target": "ES2017",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
